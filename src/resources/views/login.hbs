<div id="login">
    <form action="/" method="POST" id="form-1" class="login-form">
        <h2 class="login-heading">Đăng nhập định danh <span>♥️</span></h2>
        <div class="form-invalid">
            <p>Đăng nhập thất bại <span>😤</span></p>
        </div>
        <div class="form-group">
            <label for="account">Tài khoản</label>
            <input type="text" class="form-control" id="account" autocomplete="username" placeholder="leduc@gmail.com">
            <span class="form-message"></span>
        </div>
        <div class="form-group">
            <label for="password">Mật khẩu</label>
            <input type="password" class="form-control" id="password" autocomplete="current-password" placeholder="Mật khẩu">
            <span class="form-message"></span>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="check-remind">
            <label class="form-check-label" for="check-remind">Nhớ tôi</label>
        </div>
        <button type="submit" class="btn btn-primary mt-4 float-right float-sm-right float-md-left float-lg-left float-xl-left">Đăng nhập</button>
        <button class="btn btn-light float-left float-sm-left float-md-right float-lg-right float-xl-right">Đăng ký</button>
    </form>
</div>
{{>footer}}
<script src="/validate/validator.js"></script>
<script>
    document.addEventListener('DOMContentLoaded',function(){
        Validator({
            form: '#form-1',
            formGroupSelector: '.form-group',
            errorNotify: '.form-invalid',
            errorSelector: '.form-message',
            rules: [
              Validator.isRequired('#account', 'Vui lòng nhập tài khoản'),
              Validator.isRequired('#password','Vui lòng nhập mật khẩu')
            ]
          });
        });
</script>