<div id="site">
    {{>header}}    
    <div class="site-ctn mt-4 row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-12">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                        <img class="d-block w-100" src="/img/khai-avt.jpg" alt="First slide">
                        <div class="carousel-caption d-block d-md-block">
                            <div class="site-base">
                                <h5 class="site-name">Nguyễn Văn Khải</h5>
                                <p class="site-des">Bậc thầy cuộc sống</p>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/img/duc-avt.jpg" alt="Second slide">
                        <div class="carousel-caption d-block d-md-block">
                            <div class="site-base">
                                <h5 class="site-name">Hoàng Trung Đức</h5>
                                <p class="site-des">Thánh câu giờ</p>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="img/huy-avt.jpg" alt="Third slide">
                        <div class="carousel-caption d-block d-md-block">
                            <div class="site-base">
                                <h5 class="site-name">Lưu Sỹ Huy</h5>
                                <p class="site-des">Người trưởng thành sớm thành công</p>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="img/huynh-avt.jpg" alt="Third slide">
                        <div class="carousel-caption d-block d-md-block">
                            <div class="site-base">
                                <h5 class="site-name">Nguyễn Văn Huỳnh</h5>
                                <p class="site-des">Đi lính để mất người yêu</p>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Trước</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Tiếp</span>
                </a>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-0 col-0 site-detail">
        <h2 class="site-characteristic">Đặc điểm</h2>
            <div class="site-aspect">
                <h3 class="site-aspect-mesage">Chiều cao: <span>{{people.hight}}</span></h3>
            </div>
            <div class="site-aspect">
                <h3 class="site-aspect-mesage">Cân nặng: <span>{{people.weight}}</span>kg</h3>
            </div>
            <div class="site-aspect">
                <h3 class="site-aspect-mesage">Tuổi: <span>{{people.age}}</span></h3>
            </div>
            <div class="site-aspect">
                <h3 class="site-aspect-mesage">Người yêu: <span>{{#if people.crush}}Có{{else}}Chưa{{/if}}</span></h3>
            </div>
            <div class="site-aspect row no-gutters">
                <h3 class="site-aspect-mesage col-4">Sở thích:</h3>
                <div class="col-8">
                    {{#each people.favorites}}
                        <span class="site-favorite">{{this}}</span>
                    {{/each}}
                </div>
            </div>
            <div class="site-aspect row no-gutters">
                <h3 class="site-aspect-mesage col-12">Châm ngôn sống:</h3>
                <span class="site-maxim">{{people.maxim}}</span>
            </div>
        </div>
    </div>
    {{>footer}}
</div>